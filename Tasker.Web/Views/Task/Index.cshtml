@using Tasker.Data.Interfaces
@using Tasker.Data.Manager
@model Tasker.Data.Manager.PagedList<Tasker.Web.Models.TaskViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().DateEnd)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEnd)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            </td>
        </tr>
    }
</table>

<table>
    <tr>
        @for (var i = 1; i <= Model.PageCount; i++)
        {
            int left = Model.PageNumber - Model.ActionLinkCount / 2;
            int right = Model.PageNumber + Model.ActionLinkCount / 2;
            if (i == Model.PageCount && right < Model.PageCount )
            {
                <td>....</td>
            }
            else if (i!= 1 && (i < left || i > right))
            {
                continue;
            }

            var style = Model.PageNumber == i ? "font-weight: bold;" : "font-weight: normal;";
            <td style="@style; padding: 5px;">
                @Html.ActionLink(i.ToString(), "Index", new {page = i})
            </td>

            if (i == 1 && left > 0)
            {
                <td>....</td>
            }
        }
    </tr>
</table>
